
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model Product {
  id Int @id @default(autoincrement())
  nombre String
  precio Float
  categoria String
  imagen String?
  descripcion String?
  stock Int @default(0)
}

model User {
  id Int @id @default(autoincrement())
  nombre String
  email String @unique
  password String
  createdAt DateTime @default(now())
}